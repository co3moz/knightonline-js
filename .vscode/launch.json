  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run",
      "args": [
        "${workspaceFolder}\\src\\app.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "protocol": "inspector",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true"
      },
      "sourceMaps": true
    }
  ]
}